@{
    ViewData["Title"] = "Product edit";

    Layout = "_Layout";
}


<form class="login_box" action="@Url.Content("~/Product/SaveProduct")" method="post">
              
    <style>
            .login_box {
            width: auto;
            height: auto;
            background: #000;
            color: #fff;
            top: 50%;
            left: 50%;
            position: absolute;
            transform: translate(-50%, -50%);
            /* box-sizing: border-box; */
            padding: 10px 20px 20px 20px;
            }
    </style>


    <img class="logo" src="/icon/logo.jpg" alt="">
        

    <div style="text-align:center">
    <br>
        <h3>New Product</h3>
    </div>
    
    <div>

        <label for="">Product Name</label>
        <input type="text" placeholder="Driller" name="ProductName">

        <label for="">Brand</label>
        <input type="text" placeholder="Makita" name="Brand">

        <label for="">Category</label>
        <input type="text" placeholder="Electrics" name="Category">

        <label for="">Description</label>
        <input type="text" placeholder="Short one..." name="Description">

        <label for="">Quantity</label>
        <input type="number" name="Quantity">

        <input type="submit" value="Load">



    </div>
</form>

