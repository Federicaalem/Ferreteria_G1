@{ ViewData["Title"] = "Signup";

    Layout = "_LayoutSignup";
}


<form class="login_box" action="@Url.Content("~/Signup/Signup")" method="post">
              
        <style>
              .login_box {
              width: auto;
              height: auto;
              background: #000;
              color: #fff;
              top: 50%;
              left: 50%;
              position: absolute;
              transform: translate(-50%, -50%);
              /* box-sizing: border-box; */
              padding: 10px 20px 20px 20px;
              }
        </style>

        <img class="logo" src="/icon/logo.jpg" alt="">
        

        <div style="text-align:center">
        <br>
            <h3>Signup</h3>
        </div>
      
        <div>

            <!--TODO: no mostrar selección de rol, lo debe definir alguien con autoridad en la empresa no el creador de usuario-->
            <!--
            <label>Rol</label>
            <Select name="Roles">
                <option value="">Selecciona tu rol en la empresa</option>
                <option value="1">Jefe</option>
                <option value="2">Empleado</option>
                <option value="3">Encargado de deposito</option>
            </Select>
            -->

            <label for="">User</label>
            <input type="text" placeholder="Usuario" name="Username">


            <label>Password</label>
            <input type="password" placeholder="Contraseña" name="Password">

            <label>Password again</label>
            <input type="password" placeholder="Contraseña" name="PasswordConfirmation">

            <label>Email</label>
            <input type="email" placeholder="Email" name="Email">

            <label>Fecha de nacimiento</label>
            <input type="date" placeholder="dd/mm/YYYY" name="Birthdate">

            <label for="">Nombre</label>
            <input type="text" placeholder="Nombre" name="Firstname">

            <label for="">Apellido</label>
            <input type="text" placeholder="Apellido" name="Lastname">

            <input type="submit" value="Create User">



        </div>
    </form>

