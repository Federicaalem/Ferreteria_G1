@{ ViewData["Title"] = "Signup";

    Layout = "_LayoutSignup";
}


<form class="login_box" action="@Url.Content("~/Home/Signup")" method="post">
              
        <style>
              .login_box {
              width: auto;
              height: auto;
              background: #000;
              color: #fff;
              top: 50%;
              left: 50%;
              position: absolute;
              transform: translate(-50%, -50%);
              /* box-sizing: border-box; */
              padding: 10px 20px 20px 20px;
              }
        </style>

        <img class="logo" src="/icon/logo.jpg" alt="">
        

        <div style="text-align:center">
        <br>
            <h3>Signup</h3>
        </div>
      
        <div>

            <label>Rol</label>
            <Select name="Roles">
                <option value="">Selecciona tu rol en la empresa</option>
                <option value="1">Jefe</option>
                <option value="2">Empleado</option>
                <option value="3">Encargado de deposito</option>
            </Select>

            <label for="">User</label>
            <input type="text" placeholder="Usuario">


            <label>Password</label>
            <input type="password" placeholder="Contraseña">

            <label>Password again</label>
            <input type="password" placeholder="Contraseña">

            <label>Email</label>
            <input type="email" placeholder="Email">


            <input type="submit" value="Create User">



        </div>
    </form>

