<div class="wrapper">
    <form class="login" method="post" action="@Url.Content("~/Home/Login")">
        <p class="title">Log in</p>
        <input type="text" placeholder="Username" name="userName" autofocus />
        <i class="fa fa-user"></i>
        <input type="password" placeholder="Password" name="password" />
        <i class="fa fa-key"></i>
        <a href="@Url.Content("~/Home/PasswordRecovery")">Forgot your password?</a>
        <a href="@Url.Content("~/Home/Signup")">Don't have an account?</a>
        <button>
            <i class="spinner"></i>
            <span class="state">Log in</span>
        </button>
    </form>
    <footer><a target="blank" href="http://boudra.me/">boudra.me</a></footer>
    
</div>
