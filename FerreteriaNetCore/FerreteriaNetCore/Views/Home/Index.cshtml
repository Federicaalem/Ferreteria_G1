        <input type="submit" value="Log in">

        <br>
        <center>
            <a style="color: orangered; text-decoration: underline;" href="url">Recover password</a>
        </center>
        
        <br>
       
        <center>
            <a style="border-radius: 10px; padding: 5px 7px; text-decoration: none; color: black; background-color: moccasin; "
               href="~/home/signup">I'm new</a>
        </center>
    </div>
</form>





