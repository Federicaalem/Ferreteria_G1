@{ ViewData["Title"] = "Login";

    Layout = "_LayoutLogin";

}



<form class="login_box" method="post" action="@Url.Content("~/Login/Login")">
    <img class="logo" src="~/icon/logo.jpg" alt="">
    <h1>Login</h1>

    <div>

        <label for="">Usuario</label>
        <input type="text" placeholder="Usuario">

        <label>Contraseña</label>
